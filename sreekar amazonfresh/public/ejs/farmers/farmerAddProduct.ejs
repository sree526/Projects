<div class="container">
    <div class="row row-content">
        <div class="col-sm-3" ng-controller="navBarController">
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation" ng-class="{active:isSelected(1)}">
                    <a ng-click="select(1)" aria-controls="approve requests" role="tab" ui-sref="app">My Profile</a></li>
                <li role="presentation" ng-class="{active:isSelected(2)}">
                    <a ng-click="select(2)" aria-controls="view reviews" role="tab" ui-sref="app.farmeraddProduct">Add Product</a></li>
                <li role="presentation" ng-class="{active:isSelected(3)}">
                    <a ng-click="select(3)" aria-controls="view statistics" role="tab" ui-sref="app.farmerDeleteProduct({farmerId:farmer.vendor})">
                        Delete Product</a></li>
                <li role="presentation" ng-class="{active:isSelected(6)}">
                    <a ng-click="select(6)" aria-controls="view statistics" role="tab" ui-sref="app.farmerUpdateProduct({farmerId:farmer.vendor})">Update Product</a></li>
                <li role="presentation" ng-class="{active:isSelected(4)}">
                    <a ng-click="select(4)" aria-controls="bill details" role="tab">View Reviews</a></li>
                <li role="presentation" ng-class="{active:isSelected(5)}">
                    <a ng-click="select(5)" aria-controls="delete account" role="tab"
                       ui-sref="app.farmerDeleteAccount">Delete Account</a></li>
            </ul>
        </div>

        <div class="col-sm-6">
            <form class="form-horizontal" name="form"  ng-submit="farmerAddProduct()">
                <fieldset>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_price">Product Price</label>
                        <div class="col-sm-6">
                            <input id="product_price" ng-model="productPrice" name="product_price" type="number"
                                   placeholder="Price" class="form-control input-md" required>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_name">Name</label>
                        <div class="col-sm-6">
                            <input id="product_name" name="product_name" type="text" placeholder="Product Name"
                                   ng-model="productName" class="form-control input-md" required>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_description">Product Description</label>
                        <div class="col-sm-6">
                  <textarea class="form-control" id="product_description" name="product_description"
                            ng-model="productDescription" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_image">Product Image</label>
                        <div class="col-sm-6">
                            <input id="product_image" type="file" ngf-select
                                   ng-model="file" name="file" ngf-pattern="'image/*'" accept="image/*" ngf-max-size="5MB"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="add_product"></label>
                        <div class="col-sm-6">
                            <button id="add_product" name="add_product" class="btn btn-primary">Add Product</button>
                        </div>
                    </div>

                    <div class="alert alert-success" ng-show="success">
                        <strong>Product has been added, Waiting for admin approval</strong>
                    </div>
                </fieldset>
            </form>
        </div>

        <div class="col-sm-3">
            <img class="img-responsive" ngf-thumbnail="file"/>
        </div>

    </div><!--row ends-->
</div><!--main container Ends-->